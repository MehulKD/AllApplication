<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/img_avatar"
        android:text="Mcmunn"
        android:textColor="#3C4F5E"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:layout_marginTop="12dp"
        android:text="12 min"
        android:textColor="#3C4F5E"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/img_avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_cover"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:padding="12dp"
        android:text="The park is a favorite among skaters in California and it definitely deserves it. The park is complete with plenty of smooth banks to gain a tonâ€¦"
        android:textColor="#6C7B8A"
        android:textSize="12sp"/>

    <View
        android:layout_below="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="#33333333"/>


</RelativeLayout>